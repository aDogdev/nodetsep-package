{
  "name": "nodetsep",
  "version": "0.1.0",
  "description": "A CLI to quickly initialize Node.js projects with TypeScript, ts-node-dev, ESLint, and Prettier preconfigured.",
  "type": "module",
  "main": "dist/src/index.js",
  "files": [
    "dist",
    "templates"
  ],
  "bin": {
    "nodetsep": "./dist/src/index.js"
  },
  "scripts": {
    "dev": "nodemon --watch src --exec \"node --loader ts-node/esm\" src/index.ts",
    "start": "node dist/src/index.js",
    "build": "tsc && cp -r templates dist/",
    "ci": "pnpm run build && pnpm run check-format && pnpm run test",
    "format": "prettier --write ./src ./tests",
    "check-format": "prettier --check ./src ./tests",
    "test": "vitest run",
    "local-release": "changeset version && changeset publish",
    "prepublishOnly": "npm run ci"
  },
  "keywords": [
    "cli",
    "nodejs",
    "typescript",
    "eslint",
    "prettier",
    "ts-node-dev",
    "boilerplate",
    "starter",
    "scaffold",
    "generator"
  ],
  "homepage": "https://github.com/aDogdev/nodetsep-package",
  "bugs": {
    "url": "https://github.com/aDogdev/nodetsep-package/issues"
  },
  "author": "adog <adrianmg3008@gmail.com>",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/aDogdev/nodetsep-package"
  },
  "license": "MIT",
  "packageManager": "pnpm@10.13.1",
  "devDependencies": {
    "@changesets/cli": "^2.29.5",
    "@eslint/js": "^9.30.1",
    "@types/eslint-config-prettier": "^6.11.3",
    "@types/node": "^24.0.10",
    "@typescript-eslint/eslint-plugin": "^8.36.0",
    "@typescript-eslint/parser": "^8.36.0",
    "eslint": "^9.30.1",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.5.1",
    "globals": "^16.3.0",
    "nodemon": "^3.1.10",
    "prettier": "^3.6.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.36.0",
    "vitest": "^3.2.4"
  }
}
