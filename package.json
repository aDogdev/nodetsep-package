{
  "name": "nodetsep",
  "version": "0.0.1",
  "description": "A CLI to quickly initialize Node.js projects with TypeScript, ts-node-dev, ESLint, and Prettier preconfigured.",
  "main": "src/index.ts",
  "type": "module",
  "files": [
    "src"
  ],
  "bin": {
    "nodetsep": "./dist/index.js"
  },
  "scripts": {
    "dev": "ts-node-dev ./src/index.ts",
    "build": "tsc",
    "ci": "pnpm run build && pnpm run check-format && pnpm run test",
    "format": "prettier --write .",
    "check-format": "prettier --check .",
    "test": "vitest run"
  },
  "keywords": [
    "cli",
    "nodejs",
    "typescript",
    "eslint",
    "prettier",
    "ts-node-dev",
    "boilerplate",
    "starter",
    "scaffold",
    "generator"
  ],
  "homepage": "https://github.com/aDogdev/nodetsep-package",
  "bugs": {
    "url": "https://github.com/aDogdev/nodetsep-package/issues"
  },
  "author": "adog <adrianmg3008@gmail.com>",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/aDogdev/nodetsep-package"
  },
  "license": "MIT",
  "packageManager": "pnpm@10.12.1",
  "devDependencies": {
    "@eslint/js": "^9.30.1",
    "@types/eslint-config-prettier": "^6.11.3",
    "@types/node": "^24.0.10",
    "@typescript-eslint/eslint-plugin": "^8.36.0",
    "@typescript-eslint/parser": "^8.36.0",
    "eslint": "^9.30.1",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.5.1",
    "globals": "^16.3.0",
    "prettier": "^3.6.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.36.0",
    "vitest": "^3.2.4"
  }
}
